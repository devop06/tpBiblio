@model List<BiblioAsp.Models.Auteur> 
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Auteurs</title>
</head>
<body>
    <header>
        <h2>Liste des auteurs test</h2>
    </header>
    <div>
        @if (Model.Count > 0)
        {
            <table>
                <tr>
                    <th>Nom de l'auteur</th>
                    <th>Livre</th>
                </tr>
                @foreach (BiblioAsp.Models.Auteur a in Model)
                {
                    <tr>
                        <td>@a.Nom</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>Aucun auteur n'est présent dans notre base</p>
        }
    </div>
</body>
</html>
