@model BiblioAsp.ViewModels.AjoutLivreViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Livre</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Ajouter un livre</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Titre, "Titre :")
                @Html.TextBoxFor(model => model.Titre)
                @Html.ValidationMessageFor(model => model.Titre)
                <br />
                @Html.LabelFor(model => model.SelectValue, "Auteur :")
                @Html.DropDownListFor(model => model.SelectValue, new SelectList(Model.Auteurs, "Id", "Nom"))
                @Html.LabelFor(model => model, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.LabelFor(model => model.DateParution, "Date de parution :")
                     @Html.TextBoxFor(model => model.DateParution, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DateParution, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ajouter livre" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
